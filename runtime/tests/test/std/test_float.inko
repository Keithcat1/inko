    assert.equal(hasher1.to_hash, hasher2.to_hash)
  }

  g.test('Hashing Infinity') {
    let hasher1 = DefaultHasher.new(1, 2)
    let hasher2 = DefaultHasher.new(1, 2)

    INFINITY.hash(hasher1)
