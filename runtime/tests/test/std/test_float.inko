  }

  g.test('Subtracting a NAN by a Float') {
    let float = NAN - 2.0

    assert.true(float.not_a_number?)
  }

  g.test('Subtracting a NAN by a NAN') {
    let float = NAN - NAN

    assert.true(float.not_a_number?)
