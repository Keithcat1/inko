class async Foo {
  let @value: Int

  fn async mut update(value: Int) {
    # This is OK because it's safe to assign fields from within the process that
    # owns them.
    @value = value
  }
}

fn example {
  let foo = Foo(42)

  foo.value
  foo.value = 50
}

